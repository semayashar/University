@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "All products";
}

<html>

<head>
    <title>Sport Arete</title>
    <link href="~/css/styling.css" rel="stylesheet" type="text/css" />
</head>

    <body>

        <div class="text-center">
            <h1 class="display-4">Sport Arete</h1>
        </div>

        <div class="box">
            @if (Model.Count() != 0)
            {
            @foreach (var product in Model.OrderBy(x => x.Model))
                {
                    <div class="card col-4" style="width: 20rem; ">

                        <img class="card-img-top" style="width: auto; height: 250px;"
                     src="@product.ImageData" alt="Product Image">

                        <div class="card-body">

                            <h5 class="card-title mt-1">@product.Brand @product.Model</h5>
                            <p class="mb-0">Price: @product.Price BGN</p>
                        </div>
                        <button>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">View</a>
                        </button>
                    </div>
                }

            }
            else
            {
                <h1>There are no products left from this category</h1>
            }
        </div>
    </body>
</html>