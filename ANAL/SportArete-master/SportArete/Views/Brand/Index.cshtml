
@model IEnumerable<Brand>

@{
    ViewData["Title"] = "Brands";
}

<div class="text-center">
    <h1 class="display-4">Sport Arete</h1>
</div>

<div class="text-center">
    <h2 class="display-4">@ViewBag.Title</h2>
</div>

<div class="d-flex justify-content-center">
    @foreach (var brand in Model)
    {
        <div id="divActivites" style="border:1px solid black; margin-right: 10px">
            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Brand" asp-route-brandId="@brand.Id" >
                    <h1>@brand.Name</h1>
                    <p1>@brand.Description</p1>
            </a>
        </div>
    }
</div>